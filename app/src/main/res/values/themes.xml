<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="T" parent="Theme.MaterialComponents.DayNight.Bridge">

    </style>
    <style name="Theme.ArterialPressureDiary" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">#00796B</item>
        <item name="colorPrimaryDark">#757575</item>
        <item name="colorAccent">#00796B</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorListBackground">@color/color_list_bg_day</item>
        <item name="colorListItem">@color/color_list_item_day</item>
        <item name="toolbarBackgroundColor">@color/toolbar_bg_color_day</item>
        <item name="colorRemove">@color/color_bg_remove_day</item>
        <!--<item name="android:navigationBarColor">?attr/colorPrimaryDark</item>-->
    </style>
    <style name="Theme.ArterialPressureDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">#000</item>
    </style>
    <style name="Theme.ArterialPressureDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ArterialPressureDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">4dp</item>
        <!--<item name="android:dropDownHorizontalOffset">-4dp</item>-->
    </style>
    <style name="PreferenceItem">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="PreferenceItem.Category">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
