<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArterialPressureDiary" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/color_primary_day</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_day</item>
        <item name="colorAccent">@color/color_primary_day</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorListBackground">@color/color_list_bg_day</item>
        <item name="colorListItem">@color/color_list_item_day</item>
        <item name="toolbarBackgroundColor">@color/toolbar_bg_color_day</item>
        <item name="colorRemove">@color/color_bg_remove_day</item>
        <!--<item name="android:navigationBarColor">?attr/colorPrimaryDark</item>-->
    </style>
    <style name="Theme.ArterialPressureDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.ArterialPressureDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ArterialPressureDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">4dp</item>
        <!--<item name="android:dropDownHorizontalOffset">-4dp</item>-->
    </style>
</resources>
