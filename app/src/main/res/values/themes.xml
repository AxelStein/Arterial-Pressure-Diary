<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <style name="Theme.ArterialPressureDiary" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/color_primary_day</item>
        <item name="colorPrimaryDark">#757575</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="android:windowBackground">#fff</item>
        <item name="colorListBackground">@color/color_list_bg_day</item>
        <item name="colorListItem">@color/color_list_item_day</item>
        <item name="toolbarBackgroundColor">@color/toolbar_bg_color_day</item>
        <item name="preferenceTheme">@style/Theme.ArterialPressureDiary.PreferenceThemeOverlay</item>
        <item name="colorCategoryNormal">@color/color_category_normal_day</item>
        <item name="colorCategoryElevated">@color/color_category_elevated_day</item>
        <item name="colorCategoryStage1">@color/color_category_stage_1_day</item>
        <item name="colorCategoryStage2">@color/color_category_stage_2_day</item>
        <item name="colorCategoryCrisis">@color/color_category_crisis_day</item>
    </style>
    <style name="Theme.ArterialPressureDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">#000</item>
    </style>
    <style name="Theme.ArterialPressureDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ArterialPressureDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="Theme.ArterialPressureDiary.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_main_prefs</item>
    </style>
</resources>
